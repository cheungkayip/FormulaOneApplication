<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<GridPane alignment="TOP_CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.DriverStandingsController" hgap="10.0" vgap="10.0">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <Label style="-fx-font: NORMAL 20 Tahoma;" text="Driver Standings"
           GridPane.columnIndex="0" GridPane.rowIndex="0">
    </Label>
    <TableView prefHeight="600" fx:id="tableView" GridPane.columnIndex="0"
               GridPane.rowIndex="1">
        <columns>
            <TableColumn text="Position" prefWidth="100">
                <cellValueFactory><PropertyValueFactory property="position" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Points" prefWidth="50">
                <cellValueFactory><PropertyValueFactory property="points" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Wins" prefWidth="50">
                <cellValueFactory><PropertyValueFactory property="wins" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Driver" prefWidth="200">
                <cellValueFactory><PropertyValueFactory property="driver" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Constructor" prefWidth="300">
                <cellValueFactory><PropertyValueFactory property="constructor" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
</GridPane>